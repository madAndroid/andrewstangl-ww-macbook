apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: ${resource_name}
  namespace: flux-system
spec:
  refreshInterval: 5m
  secretStoreRef:
    kind: SecretStore
    name: vault-leaf-secrets
  target:
    name: ${resource_name}
    creationPolicy: Owner
  dataFrom:
    - extract:
        key: ${secret_name}
